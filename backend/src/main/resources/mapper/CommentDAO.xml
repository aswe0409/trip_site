<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.trip.board.dao.CommentDAO">

	<resultMap type="CommentDTO" id="commentInfo">
		<result column="comment_id" property="commentId" />
		<result column="post_id" property="postId" />
		<result column="user_id" property="userId" />
		<result column="comment_text" property="comment" />
		<result column="write_date" property="writeDate" />
		<result column="update_date" property="updateDate" />
	</resultMap>

	<select id="getList" resultMap="commentInfo" parameterType="int">
		select *
		FROM comment
		where
		post_id = #{postId}
		order by write_date asc
	</select>
	<select id="getCount" resultType="int" parameterType="int">
		select
		count(*)
		FROM comment
		where
		post_id = #{postId}
	</select>
	<select id="isUser" resultType="int" parameterType="CommentDTO">
		select
		count(*)
		FROM comment
		where
		comment_id = #{commentId} AND user_id
		=#{userId}
	</select>


	<insert id="writeComment" parameterType="CommentDTO">
		INSERT INTO comment
		(post_id, user_id, comment_text, write_date)
		VALUES
		(#{postId},
		#{userId}, #{comment}, NOW())
	</insert>

	<update id="updateComment" parameterType="CommentDTO">
		UPDATE comment
		SET
		comment_text = #{comment}
		, update_date = NOW()
		WHERE comment_id =
		#{commentId}
	</update>

	<delete id="deleteComment" parameterType="CommentDTO">
		DELETE FROM comment
		WHERE
		comment_id = #{commentId}
	</delete>



</mapper>





