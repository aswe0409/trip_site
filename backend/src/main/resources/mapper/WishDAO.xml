<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.trip.user.dao.WishDAO">
	<resultMap type="WishDTO" id="wishInfo">
		<result column="wish_id" property="wishId" />
		<result column="content_id" property="contentId" />
		<result column="user_id" property="userId" />
	</resultMap>


	<insert id="insertWish" parameterType="WishDTO">
		INSERT INTO wishlist
		(
		content_id, user_id)
		VALUES (#{contentId},
		#{userId})
	</insert>



	<delete id="deleteWish" parameterType="WishDTO">
		DELETE FROM wishlist
		WHERE
		user_id = #{userId} AND content_id = #{contentId}
	</delete>

	<select id="getList" resultMap="wishInfo" parameterType="string">
		SELECT *
		FROM wishlist
		WHERE user_id = #{userId}
	</select>

	<select id="isUser" resultType="int"
		parameterType="WishDTO">
		select
		count(*)
		FROM wishlist
		where
		wish_id = #{wishId} AND
		user_id
		=#{userId}
	</select>

</mapper>
