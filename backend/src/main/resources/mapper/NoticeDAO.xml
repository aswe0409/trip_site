<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.trip.board.dao.NoticeDAO">

	<resultMap type="NoticeDTO" id="noticeInfo">
		<result column="notice_id" property="noticeId" />
		<result column="write_date" property="writeDate" />
		<result column="content" property="content" />
		<result column="notice_img" property="noticeImg" />
		<result column="user_id" property="userId" />
		<result column="notice_title" property="noticeTitle" />
		<result column="read_count" property="readCount" />
	</resultMap>

	<select id="getList" resultType="NoticeDTO">
		select *
		from
		notice
	</select>

	<select id="showContent" resultType="NoticeDTO"
		parameterType="int">
		SELECT * FROM Notice WHERE
		notice_id = #{noticeId}
	</select>

	<insert id="writeNotice" parameterType="NoticeDTO">
		INSERT INTO Notice
		(notice_title, content, user_id)
		VALUES
		( #{noticeTitle},
		#{content},
		#{userId})
	</insert>

	<update id="updateNotice" parameterType="NoticeDTO">
		UPDATE Notice
		SET
		notice_img = #{noticeImg}, notice_title = #{noticeTitle}, content =
		#{content}
		WHERE notice_id = #{notice_id}
	</update>

	<update id="incrementViewCount" parameterType="int">
		UPDATE Notice
		SET read_count = read_count + 1
		WHERE notice_id = #{noticeId}
	</update>

	<delete id="deleteNotice" parameterType="int">
		DELETE FROM Notice
		WHERE
		notice_id = #{notice_id}
	</delete>
</mapper>

