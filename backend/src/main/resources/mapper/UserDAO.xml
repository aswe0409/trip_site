<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.trip.user.dao.UserDAO">
	<resultMap type="UserDTO" id="userInfo">
		<result column="user_id" property="userId" />
		<result column="user_password" property="userPwd" />
		<result column="birth" property="birth" />
		<result column="user_name" property="userName" />
		<result column="user_phone" property="userPhone" />
		<result column="admin" property="admin" />
	</resultMap>


	<select id="login" parameterType="UserDTO" resultMap="userInfo">
		select *
		from
		user
		where
		user_id=#{userId} and user_password=#{userPwd}
	</select>


	<select id="findById" parameterType="string"
		resultType="UserDTO" resultMap="userInfo">
		SELECT * FROM user WHERE user_id =
		#{userId}
	</select>

	<insert id="insertUser"
		parameterType="UserDTO">
		INSERT INTO user (user_id, user_password, birth,
		user_name,
		user_phone, admin)
		VALUES (#{userId}, #{userPwd}, #{birth},
		#{userName},
		#{userPhone},
		#{admin})
	</insert>
	
	<delete id="deleteUser" parameterType="String">
		delete from user
		where user_id = #{userId}
	</delete>
	

</mapper>